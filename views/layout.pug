doctype html
html(lang='ru')
  head
    meta(charset='utf-8')
    meta(name='viewport' content='width=device-width, initial-scale=1, shrink-to-fit=no')
    meta(name='description' content='')
    meta(name='author' content='')
    title #{title}
    link(rel='icon' type='image/x-icon' href='assets/favicon.ico')
    // Font Awesome icons (free version)
    //- script(src='https://use.fontawesome.com/releases/v6.1.0/js/all.js' crossorigin='anonymous')
    // Google fonts
    link(href='https://fonts.googleapis.com/css?family=Lora:400,700,400italic,700italic' rel='stylesheet' type='text/css')
    link(href='https://fonts.googleapis.com/css?family=Open+Sans:300italic,400italic,600italic,700italic,800italic,400,300,600,700,800' rel='stylesheet' type='text/css')
    // Core theme CSS (includes Bootstrap)
    link(href='/css/styles.css' rel='stylesheet')
  body
    // Navigation
    nav#mainNav.navbar.navbar-expand-lg.navbar-light
      .container.px-4.px-lg-5
        a.navbar-brand(href='/') Блог
        button.navbar-toggler(type='button' data-bs-toggle='collapse' data-bs-target='#navbarResponsive' aria-controls='navbarResponsive' aria-expanded='false' aria-label='Toggle navigation')
          | Меню
          i.fas.fa-bars
        #navbarResponsive.collapse.navbar-collapse
          ul.navbar-nav.ms-auto.py-4.py-lg-0
            li.nav-item
              a.nav-link.px-lg-3.py-3.py-lg-4(href='/') Главная
            if !user
              li.nav-item
                a.nav-link.px-lg-3.py-3.py-lg-4(href='/login') Вход
              li.nav-item
                a.nav-link.px-lg-3.py-3.py-lg-4(href='/register') Регистрация
            else
              li.nav-item
                a.nav-link.px-lg-3.py-3.py-lg-4(href='/new-post') Новая запись
              li.nav-item
                a.nav-link.px-lg-3.py-3.py-lg-4(href=`/users/${user.id}/posts`) Мои записи
              li.nav-item
                a.nav-link.px-lg-3.py-3.py-lg-4(href='/logout') Выйти
            li.nav-item
              a.nav-link.px-lg-3.py-3.py-lg-4(href='/api-docs/') API
    block content
    footer.border-top
      .container.px-4.px-lg-5
        .row.gx-4.gx-lg-5.justify-content-center
          .col-md-10.col-lg-8.col-xl-7
            .small.text-center.text-muted.fst-italic Copyright &copy; Your Website 2022
    // Bootstrap core JS
    script(src='https://cdn.jsdelivr.net/npm/bootstrap@5.1.3/dist/js/bootstrap.bundle.min.js')
    // Core theme JS
    script(src='/js/axios.min.js')
    script(src='/js/scripts.js')
