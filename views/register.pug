extends layout

block content
  include header
  // Main Content
  main.mb-4
    .container.px-4.px-lg-5
      .row.gx-4.gx-lg-5.justify-content-center
        .col-md-10.col-lg-8.col-xl-7
          .my-5
            form#register-form(data-sb-form-api-token='API_TOKEN')
              .form-floating
                input#username.form-control(type='text' placeholder='Введите логин...', required)
                label(for='username') Имя пользователя
              .form-floating
                input#password.form-control(type='password' placeholder='Ввудите пароль...', required)
                label(for='password') Пароль
              br
              #submitErrorMessage.d-none
                .text-center.text-danger.mb-3 Error sending message!
              // Submit Button
              button#send-form.btn.btn-primary.text-uppercase(type='submit') Зарегистрироваться
